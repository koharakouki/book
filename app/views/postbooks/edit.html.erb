<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@postbook) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :Title %><br>
				<%= f.text_field :title, class: "col-xs-12" %><br>

				<%= f.label :Opinion %><br>
				<%= f.text_area :body, class: "col-xs-12" %><br>

				<%= f.submit 'Update book', class: "btn btn-primary col-xs-12" %>
			<% end %>

			<%= link_to "Show", "#" %>
			<span> | </span>
			<%= link_to "Back", postbooks_path %>
		</div>
	</div>
</div>