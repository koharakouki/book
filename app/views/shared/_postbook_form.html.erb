
<h2>New book</h2>
<%= form_for(@postbook) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :Title %><br>
	<%= f.text_field :title, class: "col-xs-12" %><br>

	<%= f.label :Opinion %><br>
	<%= f.text_area :body, class: "col-xs-12" %><br>

	<%= f.submit 'Create book', class: "btn btn-primary col-xs-12" %>
<% end %>
