<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %><br>
	    	<%= f.text_field :name %><br>

	    	<%= f.label :image %><br>
			<%= f.attachment_field :profile_image %><br>

			<%= f.label :introduction %><br>
			<%= f.text_area :introduction %><br>

			<%= f.submit "Update User" %>
		<% end %>
	</div>
</div>
