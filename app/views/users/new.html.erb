
<div class="row">
	<div class="col-xs-3">
		<h2>Sign up</h2>
		<%= form_for(@user, url: user_sign_up_path) do |f| %>
			<%= render 'shared/error_messages' %>

	    	<%= f.label :name %><br>
	    	<%= f.text_field :name %><br>

		    <%= f.label :email %><br>
		    <%= f.email_field :email %><br>

		    <%= f.label :password %><span>(6 characters minimum)</span><br>
		    <%= f.password_field :password %><br>

			<%= f.label :password_confirmation, "Confirmation" %><br>
		    <%= f.password_field :password_confirmation %><br>

	        <%= f.submit "Sign up", class: "btn btn-success signup" %>
	    <% end %>
	</div>
</div>