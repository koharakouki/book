
<div class="row">
	<div class="col-xs-3">
		<section class="user_info">
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/postbook_form' %>
		</section>
	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th><th>Title</th> <th>opinion</th>
				</tr>
		    </thead>
		    <tbody>
			    <% @postbooks.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %></td>
						<td><%= link_to book.title, postbook_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @postbooks %>
	</div>
</div>



