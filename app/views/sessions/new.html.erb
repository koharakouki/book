
<div class="row">
	<div class="col-xs-3">
		<h2>Log in</h2>
		<%= form_for(:session, url: users_sign_in_path) do |f| %>

	    	<%= f.label :name %><br>
	    	<%= f.text_field :name %><br>

		    <%= f.label :password %><br>
		    <%= f.password_field :password %><br>

		    <%= f.label :remember_me, class: "checkbox inline" do %>
		    	<%= f.check_box :remember_me%>
		    	<span>Remember me</span>
		    <% end %><br>

	        <%= f.submit "Log in", class: "btn btn-primary" %>
	    <% end %>

	    <p><%= link_to "Sign up", users_sign_up_path %></p>
	</div>
</div>